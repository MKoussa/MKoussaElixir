<.header>
  Thank You for your order!
  <:subtitle>
    <strong>User uuid: </strong><%= @order.user_uuid %>
  </:subtitle>
</.header>

<.table id="items" rows={@order.line_items}>
  <:col :let={item} label="Title"><%= item.product.title %></:col>
  <:col :let={item} label="Quantity"><%= item.quantity %></:col>
  <:col :let={item} label="Price">
    <%= MkoussaelixirWeb.CartHTML.currency_to_str(item.price) %>
  </:col>
</.table>

<strong>Total Price</strong>
<%= MkoussaelixirWeb.CartHTML.currency_to_str(@order.total_price) %>

<.back navigate={~p"/products"}>Back to Products</.back>
